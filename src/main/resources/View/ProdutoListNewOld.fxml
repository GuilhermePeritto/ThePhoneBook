<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefWidth="685.0" styleClass="background-list" stylesheets="@ContatoList.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ThePhoneBook.Controller.ContatoListController">
   <right>
      <HBox prefHeight="55.0" prefWidth="102.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="editarProdutoBtn" mnemonicParsing="false" onAction="#EditarProdutoBtnEvent" prefHeight="55.0" prefWidth="54.0" stylesheets="@ContatoList.css">
               <graphic>
                  <ImageView fitHeight="38.0" fitWidth="38.0">
                     <image>
                        <Image url="@../Image/editar.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="excluirProdutoBtn" mnemonicParsing="false" onAction="#ExcluirProdutoBtnEvent" prefHeight="55.0" prefWidth="54.0" stylesheets="@ContatoList.css">
               <graphic>
                  <ImageView fitHeight="38.0" fitWidth="38.0">
                     <image>
                        <Image url="@../Image/excluir.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
         </children>
      </HBox>
   </right>
   <left>
      <Button fx:id="abrirProdutoBtn" mnemonicParsing="false" onAction="#InspecionarProdutoBtnEvent" prefHeight="55.0" prefWidth="43.0" stylesheets="@ContatoList.css" BorderPane.alignment="CENTER">
         <graphic>
            <ImageView fitHeight="38.0" fitWidth="38.0">
               <image>
                  <Image url="@../Image/pesquisar.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </left>
   <center>
      <HBox prefHeight="15.0" prefWidth="521.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="nomeProdutoLbl" prefHeight="55.0" prefWidth="276.0" text="Label" textFill="WHITE">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="ValorProdutoLbl" prefHeight="55.0" prefWidth="175.0" text="Label" textFill="WHITE">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </center>
</BorderPane>
